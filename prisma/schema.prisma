generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  password  String
  phone     String
  avatarUrl String?
  role      UserRole  @default(CLIENT)

  isEmailVerified Boolean @default(false)
  isPhoneVerified Boolean @default(false)
  
  verificationCode String? // O código de 6 dígitos
  codeExpiresAt    DateTime? // Validade do código
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  orders    Order[]
  provider  Provider?
}

model Provider {
  id          String    @id @default(uuid())
  userId      String    @unique
  category    String
  description String?
  city        String    @default("São Luís - MA")
  neighborhood String?
  rating      Float     @default(5.0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  orders      Order[]
  user        User      @relation(fields: [userId], references: [id])
  services    Service[]

  @@index([category])
}

model Service {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Float?
  providerId  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orders      Order[]
  provider    Provider @relation(fields: [providerId], references: [id])
}

model Order {
  id         String      @id @default(uuid())
  clientId   String
  providerId String
  serviceId  String
  status     OrderStatus @default(PENDING)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  client     User        @relation(fields: [clientId], references: [id])
  provider   Provider    @relation(fields: [providerId], references: [id])
  service    Service     @relation(fields: [serviceId], references: [id])
  review     Review?
}

model Review {
  id        String   @id @default(uuid())
  orderId   String   @unique
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])
}

enum UserRole {
  CLIENT
  PROVIDER
  BOTH
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_PROGRESS
  COMPLETED
  CANCELED
}
